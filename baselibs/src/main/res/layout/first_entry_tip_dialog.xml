<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_space_10"
    android:layout_marginRight="@dimen/margin_space_10"
    android:background="@drawable/shape_rounded_rectangle"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tip_close_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/margin_space_10"
        android:padding="@dimen/padding_small"
        android:src="@drawable/close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="温馨提示"

        android:textColor="@color/black"
        android:textSize="@dimen/text_size_big" />


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_space_10"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="@dimen/margin_big"
        android:paddingRight="@dimen/margin_big"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_middle" />


    <LinearLayout
        android:id="@+id/ll_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_space_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_big"
        android:paddingRight="@dimen/margin_big"
        android:paddingBottom="@dimen/margin_middle">

        <CheckBox
            android:id="@+id/agreement_bt"
            android:layout_width="@dimen/margin_space_20"
            android:layout_height="@dimen/margin_space_20"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/selector_useragreement_button"
            android:button="@null"
            android:drawablePadding="@dimen/margin_small"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tip_user_agreement_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_space_5"
        android:background="@color/whitesmoke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_space_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rounded_rectangle_bot_right_gray"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_middle" />

    </LinearLayout>

</LinearLayout>